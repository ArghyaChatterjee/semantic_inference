cmake_minimum_required(VERSION 3.0.2)
project(pytorch-download)

include(ExternalProject)
# adapted from https://github.com/ethz-asl/protobuf_catkin
ExternalProject_Add(
  protobuf_src
  URL https://github.com/protocolbuffers/protobuf/releases/download/v3.11.4/protobuf-cpp-3.11.4.tar.gz
  CONFIGURE_COMMAND ./configure --prefix=@PROTOBUF_INSTALL_DIR@
  BUILD_IN_SOURCE TRUE
  INSTALL_COMMAND)
